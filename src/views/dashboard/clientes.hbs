<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Clientes</h1>
  <p class="mb-4">Listado de clientes</p>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <div class="row">
        <div class="col-md-6">
          <h6 class="m-0 font-weight-bold text-primary">Clientes</h6>
        </div>
        <div class="col-md-6 d-flex flex-row-reverse">

          <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal">Eliminar</button>
          <button type="button" class="btn btn-sm btn-primary mx-1" data-toggle="modal" data-target="#addModal">Agregar</button>
        </div>
      </div>

    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>RUC/DNI</th>
              <th>Razón Social/Nombre</th>
              <th>Dirección</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            {{#each results}}
              <tr>
                <td>{{pe_jur_ruc}}</td>
                <td>{{pe_jur_razon_social}}</td>
                <td>{{pe_jur_direccion}}</td>
                <td>{{pe_jur_email}}</td>
              </tr>
            {{else}}
              <!--        <h6>
                        No hay clientes registrados.
                      </h6>-->
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->

</div>
<!-- AddModal-->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Agregar Cliente</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="#" class="needs-validation" novalidate>
          <div class="row justify-content-center mb-3">
            <div class="col ml-3 mr-3 ">
              <div class="form-check">
                <label class="form-check-label">
                  <input type="radio" class="form-check-input" name="optradio">Natural
                </label>
              </div>
            </div>
            <div class="col ml-3 mr-3">
              <div class="form-check">
                <label class="form-check-label">
                  <input type="radio" class="form-check-input" name="optradio">Jurídica
                </label>
              </div>
            </div>
          </div>
          <div class="form-group form-row">
            <label for="inputCategoria" class="col-4 col-form-label">Categoria:</label>
            <input type="text" class="col-8 form-control mb-2" id="inputCategoria" required>
            <div class="valid-feedback">¡Correcto!</div>
            <div class="invalid-feedback">Ingresar categoria</div>
          </div>

          <div class="form-group form-row">
            <label for="inputNombre" class="col-4 col-form-label">Nombre:</label>
            <input type="text" class="col-8 form-control mb-2" id="inputNombre" required>
            <div class="valid-feedback">¡Correcto!</div>
            <div class="invalid-feedback">Ingresar nombre</div>
          </div>

          <div class="form-group form-row">
            <label for="inputPrecio" class="col-4 col-form-label">Precio:</label>
            <input type="number" class="col-8 form-control mb-2" id="inputPrecio" required>
            <div class="valid-feedback">¡Correcto!</div>
            <div class="invalid-feedback">Ingresar el precio</div>
          </div>

          <div class="form-group form-row">
            <label for="inputStock" class="col-4 col-form-label">Stock:</label>
            <input type="text" class="col-8 form-control mb-2" id="inpuStock" required>
            <div class="valid-feedback">¡Correcto!</div>
            <div class="invalid-feedback">Ingresar el stock</div>
          </div>

          <div class="form-group form-row">
            <label for="inputUnidad" class="col-4 col-form-label">Unidad:</label>
            <select class="col-8 form-control mb-2" id="inputUnidad" required>
              <option value="1"></option>
              <option value="2">Objeto 2</option>
              <option value="3">Objeto 3</option>
            </select>
            <div class="valid-feedback">¡Correcto!</div>
            <div class="invalid-feedback">Seleccionar medida</div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-sm btn-success" type="button" data-dismiss="modal">Aceptar</button>
        <button class="btn btn-sm btn-danger" type="button" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>

<!-- Delete Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">¿Está seguro de eliminar el elemento?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">Seleccione "Si" para eliminar la fila, sino Cancelar.</div>
      <div class="modal-footer">
        <button class="btn btn-primary" type="button" data-dismiss="modal">Si</button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>
