                  <tbody>
                    {{#each results}}
                      <tr>
                        <td>{{pe_jur_ruc}}</td>
                        <td>{{pe_jur_razon_social}}</td>
                        <td>{{pe_jur_direccion}}</td>
                        <td>{{pe_jur_email}}</td>
                      </tr>
                    {{else}}
                      <h6>
                        No hay clientes registrados.
                      </h6>
