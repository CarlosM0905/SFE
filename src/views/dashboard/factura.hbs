            <table class="table table-bordered" width="100%" cellspacing="0">
              <thead>
                <div class="row">
                  <div class="col-12 mb-3">
                    <button type = "button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#addModal"><i class="fas fa-plus"></i></button>

                  </div>
