          <input type="text" name="documento"  class="form-control" id="inputDocumento" minlength="8" maxlength="11" required>
          <div class="valid-feedback">¡Correcto!</div>
          <div class="invalid-feedback">Ingresar documento</div>
        </div>

        <!--Button verify-->
        <div class="col-8">
          <button type="submit" class="btn btn-success btn-circle btn-sm"><i class="fas fa-search"></i></button>
        </div>
      </div>

      <div class="form-group form-row">
        <div class="col">
          <div class="form-row">
            <!--Emisor-->
            <label for="inputCliente" class="col-2 col-form-label">Señor(es):</label>
            <div class="col-10">

              <input type="text" class="form-control" id="inputCliente"required>


              <div class="valid-feedback">
                ¡Correcto!
              </div>
              <div class="invalid-feedback">
                Ingresar el nombre
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group form-row">
        <div class="col">
          <div class="form-row">
            <!--Dirección-->
            <label for="inputDireccion" class="col-2 col-form-label">Dirección:</label>
            <div class="col-10">

              <input type="text" class="col form-control" id="inputDireccion" required>

              <div class="valid-feedback">
                ¡Correcto!
              </div>
              <div class="invalid-feedback">
