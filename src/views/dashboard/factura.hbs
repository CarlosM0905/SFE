  <div class="form-factura">

    <form class="needs-validation" action="/dashboard/factura" method="POST" novalidate>

{{#if newFactura}}
      <div class="form-group form-row">
        <label for="inputDocumento" class="col-2 col-form-label">Documento:</label>
        <div class="col mr-3">
          <input type="text" name="documento" value="{{newFactura.ruc}}" class="form-control" id="inputDocumento" minlength="8" maxlength="11" required>
          <div class="valid-feedback">¡Correcto!</div>
          <div class="invalid-feedback">Ingresar documento</div>
        </div>

        <!--Button verify-->
        <div class="col-8">
          <button type="submit" class="btn btn-success btn-circle btn-sm"><i class="fas fa-search"></i></button>
        </div>
      </div>

      <div class="form-group form-row">
        <div class="col">
          <div class="form-row">
            <!--Emisor-->
            <label for="inputCliente" class="col-2 col-form-label">Señor(es):</label>
            <div class="col-10">

              <input type="text" class="form-control" id="inputCliente" value="{{newFactura.razon_social}}"required>


              <div class="valid-feedback">
                ¡Correcto!
              </div>
              <div class="invalid-feedback">
                Ingresar el nombre
              </div>
